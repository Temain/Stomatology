@model Stomatology.Web.Models.ServiceViewModel
@{
    ViewBag.Title = "Редактировать услугу";
}

<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
                <h4>Редактировать услугу</h4>
            </div>
        </div>

        <div class="row">
            <!-- Form Control starts -->
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-block">
                        <form action="@Url.Action("Edit")" method="post">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.ServiceId)
                            <div class="form-group">
                                <label for="name" class="form-control-label">Наименование</label>
                                @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control", @id = "serviceName", @placeholder = "Введите наименование..." })
                                @Html.ValidationMessageFor(m => m.ServiceName)
                            </div>
                            <div class="form-group">
                                <label for="cost" class="form-control-label">Стоимость</label>
                                @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", @id = "cost", @placeholder = "Введите стоимость..." })
                                @Html.ValidationMessageFor(m => m.Cost)
                            </div>
                            <button type="submit" class="btn btn-success btn-md waves-effect waves-light m-r-30">Сохранить</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Form Control ends -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $(".sidebar-menu .active").removeClass("active");
            $("#services").addClass("active");
        });
    </script>
}