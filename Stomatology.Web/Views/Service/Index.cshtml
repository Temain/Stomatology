@model List<Stomatology.Web.Models.ServiceViewModel>
@{
    ViewBag.Title = "Услуги";
}

<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
                <h4>Услуги</h4>
                <a href="@Url.Action("Create")" class="btn btn-md btn-add btn-primary waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="" data-original-title="Добавить услугу">
                    Добавить
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <!-- Hover effect table starts -->
                <div class="card">
                    @*<div class="card-header">
                            <h5 class="card-header-text">Hover Effects on Row</h5>
                            <p>Add <code>.table-hover</code> Class in table tag</p>
                        </div>*@
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Наименование</th>
                                            <th class="text-center">Стоимость</th>
                                            <th>Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ 
                                            var index = 0;
                                            foreach (var service in Model)
                                            {
                                                <tr>
                                                    <td>@(++index)</td>                              
                                                    <td>@service.ServiceName</td>
                                                    <td class="text-center">@((int)service.Cost) руб.</td>
                                                    <td>
                                                        <a href="@Url.Action("Edit", new { id = service.ServiceId })" class="text-success" style="margin-right:1em;"><i class="icon-pencil"></i></a>                                      
                                                        <a href="@Url.Action("Delete", new { id = service.ServiceId })" class="text-danger"><i class="icon-trash"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        } 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Hover effect table ends -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $(".sidebar-menu .active").removeClass("active");
            $("#services").addClass("active");
        });
    </script>
}